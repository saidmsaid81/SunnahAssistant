<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_settings_subtitle"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="32dp" />

            <!-- Arabic Text Font Size Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/arabic_text_font_size"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="12dp" />

                        <SeekBar
                            android:id="@+id/arabic_text_size_seek_bar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progress="8"
                            android:max="30"
                            android:progressTint="?android:attr/colorAccent"
                            android:thumbTint="?android:attr/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/arabic_text_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18sp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?android:attr/textColorPrimary"
                        android:background="@drawable/selected_date_bg"
                        android:padding="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Translation Text Font Size Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/translation_text_font_size"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="12dp" />

                        <SeekBar
                            android:id="@+id/translation_text_size_seek_bar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progress="6"
                            android:max="20"
                            android:progressTint="?android:attr/colorAccent"
                            android:thumbTint="?android:attr/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/translation_text_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16sp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?android:attr/textColorPrimary"
                        android:background="@drawable/selected_date_bg"
                        android:padding="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footnote Text Font Size Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/footnote_text_font_size"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="12dp" />

                        <SeekBar
                            android:id="@+id/footnote_text_size_seek_bar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:progress="4"
                            android:max="16"
                            android:progressTint="?android:attr/colorAccent"
                            android:thumbTint="?android:attr/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24sp"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/footnote_text_size_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12sp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="?android:attr/textColorPrimary"
                        android:background="@drawable/selected_date_bg"
                        android:padding="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Preview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preview"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/preview_arabic_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
                        android:textAlignment="textEnd"
                        android:textDirection="rtl"
                        android:textSize="18sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/dividerHorizontal"
                        android:alpha="0.3"
                        android:layout_marginVertical="8dp" />

                    <TextView
                        android:id="@+id/preview_translation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In the name of Allah, the Entirely Merciful, the Especially Merciful."
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/preview_footnote_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is a sample footnote text to demonstrate font size changes."
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="italic"
                        android:lineSpacingExtra="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</layout>