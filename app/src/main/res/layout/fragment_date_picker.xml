<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pick_date"
        android:paddingTop="@dimen/default_dimen"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
        />

    <com.thesunnahrevival.sunnahassistant.views.customviews.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cv_orientation="horizontal"
        app:cv_scrollMode="paged"
        android:layout_margin="@dimen/default_dimen"
        android:background="@color/calendar_bg_color"
        app:cv_monthHeaderResource="@layout/calendar_month_header_layout"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_dimen"
      android:gravity="end"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/cancel"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/cancel"
        android:padding="@dimen/default_dimen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/fabColor"
        />

    <TextView
        android:id="@+id/ok"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/ok"
        android:padding="@dimen/default_dimen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/fabColor"
        />


  </LinearLayout>
  </LinearLayout>
</ScrollView>