<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_dimen"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/restore_encrypted_data_label"
      android:paddingTop="@dimen/default_dimen"
      android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
      />

  <com.google.android.material.textfield.TextInputLayout
      app:endIconMode="password_toggle"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/default_dimen"
        android:autofillHints="password"
        android:hint="@string/enter_decryption_password"
        />

  </com.google.android.material.textfield.TextInputLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"
      android:paddingTop="@dimen/default_dimen"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/cancel"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/cancel"
        android:padding="@dimen/default_dimen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/fabColor"
        />

    <TextView
        android:id="@+id/restore_data"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/restore_data_button"
        android:padding="@dimen/default_dimen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/fabColor"
        />


  </LinearLayout>
</LinearLayout>