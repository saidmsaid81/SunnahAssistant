<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/default_dimen"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/default_dimen"
      android:textStyle="bold"
      />

  <ListView
      android:id="@+id/options_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <TextView
      android:id="@+id/info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="Information on backup and restore"
      android:drawablePadding="@dimen/default_dimen"
      android:padding="@dimen/default_dimen"
      android:textStyle="bold"
      android:text="@string/restoring_app_data_will_delete_all_existing_data_and_replace_it_with_restored_data"
      app:drawableStartCompat="@drawable/ic_info"
      />

  <TextView
      android:id="@+id/message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      tools:visibility="visible"
      tools:text="Information on backup and restore"
      android:drawablePadding="@dimen/default_dimen"
      android:padding="@dimen/default_dimen"
      android:textStyle="bold"
      app:drawableStartCompat="@drawable/ic_info"
      />

</LinearLayout>