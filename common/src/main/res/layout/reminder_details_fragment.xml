<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <data>

    <import type="android.view.View" />

    <variable
        name="remindersName"
        type="String"
        />

    <variable
        name="reminderInfo"
        type="String"
        />

    <variable
        name="selectedFrequency"
        type="int"
        />

    <variable
        name="offsetInMinutes"
        type="int"
        />

    <variable
        name="isAutomaticPrayerTime"
        type="boolean"
        />

    <variable
        name="days"
        type="String[]"
        />
  </data>
  <ScrollView
      android:id="@+id/bottom_sheet"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_dimen"
        android:paddingEnd="@dimen/default_dimen"
        >

      <LinearLayout
          android:id="@+id/reminder_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_name"
            android:contentDescription="@string/reminder_name_label"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/reminder_name_label"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:textStyle="bold"
              android:text="@string/reminder_name_label"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"

              />

          <EditText
              android:id="@+id/reminder_name_value"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:hint="@string/reminder_name_hint"
              android:importantForAutofill="no"
              android:inputType="text"
              android:background="@android:color/transparent"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.EditText"
              android:text="@{remindersName}"
              android:enabled="@{isAutomaticPrayerTime == true ? false : true}"
              />


        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/reminder_frequency"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_repeat"
            android:contentDescription="@string/frequency"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/reminder_frequency_label"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:text="@string/frequency"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/reminder_frequency_value"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              android:enabled="@{isAutomaticPrayerTime == true ? false : true}"
              tools:text="Weekly"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/reminder_category"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_category"
            android:contentDescription="@string/reminder_category"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/reminder_category_label"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:text="@string/reminder_category"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/reminder_category_value"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              android:enabled="@{isAutomaticPrayerTime == true ? false : true}"
              tools:text="Uncategorized"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/reminder_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          android:visibility="@{selectedFrequency == 0 || selectedFrequency == 3 ? View.VISIBLE : View.GONE}"
          tools:visibility="visible"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_select_day"
            android:contentDescription="@string/date"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/reminder_date_label"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textStyle="bold"
              android:text="@string/date"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/reminder_date_value"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              tools:text="On 29th Aug, 2022"
              />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/select_days"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="@{selectedFrequency == 2 ? View.VISIBLE : View.GONE}"
          tools:visibility="visible"
          android:orientation="horizontal"
          android:layout_marginTop="@dimen/default_dimen"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_select_day"
            android:contentDescription="@string/select_days"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/select_days_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/select_days"
              android:textStyle="bold"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/select_days_value"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              tools:text="Sun, Mon, Fri"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/reminder_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_clock"
            android:contentDescription="@string/time_label"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/reminder_time_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/time_label"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/reminder_time_value"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              android:enabled="@{isAutomaticPrayerTime == true ? false : true}"
              tools:text="09:45"
              />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/notify"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          tools:visibility="visible"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_notifications_on"
            android:contentDescription="@string/notify"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/notify_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/notify"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/notify_value"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              tools:text="No Notification"
              />
        </LinearLayout>

      </LinearLayout>


      <LinearLayout
          android:id="@+id/mark_as_complete"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:background="?android:attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_check"
            android:contentDescription="@string/mark_as_complete"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/mark_as_complete_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/mark_as_complete"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <TextView
              android:id="@+id/mark_as_complete_value"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.DropDownHint"
              tools:text="No"
              />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="@{isAutomaticPrayerTime == true ? View.VISIBLE : View.GONE}"
          android:layout_marginTop="@dimen/default_dimen"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_clock"
            android:contentDescription="@string/time_label"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


          <TextView
              android:id="@+id/change_prayer_time_offset_label"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{String.format(@string/change_prayer_time_offset_by, remindersName)}"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              android:textStyle="bold"
              tools:text="Change Asr Prayer Time By"
              />

          <EditText
              android:id="@+id/prayerOffsetValue"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/minutes"
              android:importantForAutofill="no"
              android:inputType="numberSigned"
              android:background="@android:color/transparent"
              android:text="@{String.valueOf(offsetInMinutes)}"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.EditText"
              />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/reminder_additional_details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/default_dimen"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:src="@drawable/ic_additional_details"
            android:contentDescription="@string/more_details"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/more_details_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/more_details"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Subtitle"
              />

          <EditText
              android:id="@+id/additional_details"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/enter_additional_details"
              android:text="@{reminderInfo}"
              android:gravity="top|start"
              android:importantForAutofill="no"
              android:textAppearance="@android:style/TextAppearance.Material.Widget.EditText"
              android:background="@android:color/transparent"
              android:inputType="textMultiLine"
              />


        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:visibility="@{reminderInfo.contains(&quot;href&quot;) || isAutomaticPrayerTime ? View.VISIBLE : View.GONE}"
          android:orientation="horizontal"
          >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info"
            android:paddingStart="@dimen/default_dimen"
            android:paddingEnd="@dimen/default_dimen"
            android:layout_gravity="center"
            android:contentDescription="@string/info"
            />


        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            tools:text="Some Information"
            />
      </LinearLayout>
    </LinearLayout>

  </ScrollView>
</layout>