<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

  <com.thesunnahrevival.common.views.customviews.CalendarView
      android:id="@+id/calendar_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cv_orientation="horizontal"
      app:cv_scrollMode="paged"
      android:layout_margin="@dimen/default_dimen"
      android:background="@color/calendar_bg_color"
      android:elevation="4dp"
      app:cv_monthHeaderResource="@layout/calendar_month_header_layout"
      app:cv_dayViewResource="@layout/calendar_day_layout"
      />

  <TextView
      android:id="@+id/selected_date"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_marginStart="@dimen/default_dimen"
      android:layout_marginEnd="@dimen/default_dimen"
      android:layout_marginBottom="@dimen/default_dimen"
      android:textSize="14sp"
      android:layout_height="wrap_content"
      />

</LinearLayout>


