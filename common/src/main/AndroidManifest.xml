<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesunnahrevival.common">

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="*" />
        </intent>
    </queries>


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:hasFragileUserData="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.thesunnahrevival.common.widgets.HijriDateWidgetConfigureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.thesunnahrevival.common.widgets.PrayerTimesWidgetConfigureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.thesunnahrevival.common.widgets.TodayRemindersWidgetConfigureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.thesunnahrevival.common.views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver
            android:name="com.thesunnahrevival.common.widgets.TodayRemindersWidget"
            android:label="@string/today_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/today_reminders_widget_info" />
        </receiver>

        <receiver
            android:name="com.thesunnahrevival.common.widgets.PrayerTimesWidget"
            android:label="@string/prayer_times_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/prayer_reminders_widget_info" />
        </receiver>

        <receiver
            android:name="com.thesunnahrevival.common.widgets.HijriDateWidget"
            android:label="@string/hijri_date_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hijri_date_widget_info" />
        </receiver>
        <receiver android:name="com.thesunnahrevival.common.receivers.ReminderBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.thesunnahrevival.common.receivers.InAppBrowserBroadcastReceiver" />

        <service
            android:name="com.thesunnahrevival.common.services.NextReminderService"
            android:exported="false" />
        <service
            android:name="com.thesunnahrevival.common.widgets.TodaysRemindersRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name="com.thesunnahrevival.common.widgets.PrayerRemindersRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name="com.thesunnahrevival.common.firebase.SAFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_alarm" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="Developer" />

    </application>


</manifest>